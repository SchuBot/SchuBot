<script>
    connectedToSocket = function() {
        document.getElementById("welcome").innerHTML = '';
        document.getElementById("welcome").innerHTML += "Socket: Connected";
    }

    disconnectedToSocket = function() {
        document.getElementById("welcome").innerHTML = '';
        document.getElementById("welcome").innerHTML += "Socket: Disconnected";
    }

    connectedToBeam = function() {
        //todo add connection icon
        document.getElementById("beamConnection").innerHTML = '';
        document.getElementById("beamConnection").innerHTML += "Mixer: Connected";

        // document.getElementById("mixericonleft").style.color = "white";
        // document.getElementById("mixericonright").style.color = "lightskyblue";

    }



    disconnectedToBeam = function() {
        //todo add connection icon
        document.getElementById("beamConnection").innerHTML = '';
        document.getElementById("beamConnection").innerHTML += "Mixer: Not Connected";

        //this needs to be refined as we want to use the progressbar to show chat drop outs
        setProgressBarToHidden();
    }

    setProgressBarToHidden = function() {
        $('#mixrConnection').attr('value', 100);
        document.getElementById("mixrConnection").style.visibility = 'hidden';
        document.getElementById("mixrConnectionLabel").style.visibility = 'hidden';
    }


    setAccountsOnUi = function(streamer, bot) {
        document.getElementById("casterAccount").innerHTML = '';
        document.getElementById("casterAccount").innerHTML += streamer;
        document.getElementById("botAccount").innerHTML = '';
        document.getElementById("botAccount").innerHTML += bot;
    }

    setBotAccountLoggedIn = function(bot) {
        document.getElementById("botAccount").innerHTML = '';
        document.getElementById("botAccount").innerHTML += 'Authed Bot - ' + bot;
    }

    setStreamerAccountLoggedIn = function(streamer) {
        document.getElementById("casterAccount").innerHTML = '';
        document.getElementById("casterAccount").innerHTML += 'Authed Caster - ' + streamer;
    }
</script>